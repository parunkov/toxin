extends ../../base.pug
block description
	meta(name='description', content="Headers & Footers")
block title
	| Headers & Footers
block main
	.headers-footers
		include ../../components/ui-kit/ui-kit.pug
		include ../../components/header/header.pug
		include ../../components/footer/footer.pug
		include ../../components/logo/logo.pug

		+ui-kit
		.headers-footers__header.headers-footers__header_1
			+header(1)
		.headers-footers__header.headers-footers__header_2
			+header(1, 1)
		.headers-footers__footer-1
			+footer(1)
		.headers-footers__footer-2
			.headers-footers__footer-wrapper
				.headers-footers__footer-container
					.headers-footers__logo
						+logo
					p.headers-footers__text Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.
					ul.headers-footers__social-list
						li.footer__social-item
							a(href="/mock-address/change-me" target="_blank" rel="noopener noreferrer" class="footer__social footer__social_twitter") Twitter
						li.footer__social-item
							a(href="/mock-address/change-me" target="_blank" rel="noopener noreferrer" class="footer__social footer__social_facebook") Facebook
						li.footer__social-item
							a(href="/mock-address/change-me" target="_blank" rel="noopener noreferrer" class="footer__social footer__social_instagram") Instagram