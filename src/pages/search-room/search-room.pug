			.search-room__filters
				h3.search-room__aside-title.js-search-room__aside-title #{headers[0]}
			aside.search-room__form.js-search-room__form
				form.search-room__form-content.js-search-room__form-content
					.search-room__input-wrapper.js-search-room__input-wrapper
						+dates-filter(input1, datepickerText)
					.search-room__peoples-dropdown-wrapper.js-search-room__peoples-dropdown-wrapper
						+dropdown(dropdown1)
					.search-room__slider-wrapper
						+slider(1, sliderTitle)
					.search-room__slider-text #{sliderText}
					.search-room__checkbox-wrapper.js-search-room__checkbox-wrapper
						h3.search-room__aside-title.js-search-room__aside-title.search-room__checkbox-title #{headers[1]}
						+checkbox(checkbox1)
					.search-room__rich-wrapper
						h3.search-room__aside-title.js-search-room__aside-title.search-room__rich-title #{headers[2]}
						+checkbox(checkbox2)
					.search-room__room-dropdown-wrapper.js-search-room__room-dropdown-wrapper
						+dropdown(dropdown2)
					.search-room__expandable-wrapper
						h3.search-room__aside-title.js-search-room__aside-title.search-room__expandable-title.js-search-room__expandable-title #{headers[3]}
						.search-room__expandable-text.js-search-room__expandable-text.d-none
							+checkbox(checkbox3)
			section.search-room__cards
				h1.search-room__title #{headers[4]}
				.search-room__cards-wrapper
					each val, i in data
						.search-room__card-wrapper
							+card('', val, cardText)
				.search-room__pagination-wrapper
					+pagination(1, 12, paginationText)
	+footer