				const input1 = {
					h3: 'даты пребывания в отеле',
					type: 'text',
					name: 'search-room__input-1',
					cl: ' input__field_theme_without-hover',
					val: '19 авг - 23 авг',
					plac: 'Введите даты',
					p: '',
					icon: 'expand_more'
				}
				const dropdown1 = {
					cl: 'peoples',
					name: 'guests',
					header: 'гости',
					p: '',
					item1: 'взрослые',
					item2: 'дети',
					item3: 'младенцы',
