						+btn(btnText, 'div')
					.form-elements__btn
						+btn(btnText, 'div', 'transparent')
					.form-elements__btn
						+btn(btnText, 'div-light')
					.form-elements__btn
						+btn(btnText, 'div-light', 'transparent')
					.form-elements__btn
						+btn(btnText, 'div-text')
					.form-elements__btn
						+btn(btnText, 'div-text', 'color_gray')
					.form-elements__btn
						+btn(btnText2, 'button', 'theme_arrow')
				.js-form-elements__item
					h3.js-form-elements__item-title #{headers[6]}
					+pagination(1, 12, paginationText)
			section.js-form-elements__section
				.js-form-elements__item
					+dropdown(dropdown1)
				.js-form-elements__item
					+dropdown(dropdown2)
			section.js-form-elements__section
				.js-form-elements__item
					h3.js-form-elements__item-title #{headers[7]}
				.js-form-elements__item
					h3.js-form-elements__item-title #{headers[7]}
