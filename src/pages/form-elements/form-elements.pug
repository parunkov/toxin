				.js-form-elements__item
					+input(input7)
				.js-form-elements__item
					+input(input8)
			section.js-form-elements__section
				.js-form-elements__item
					h3.js-form-elements__item-title #{headers[0]}
					+checkbox(checkbox1)
				.js-form-elements__item
					h3.js-form-elements__item-title #{headers[1]}
					+radio(radio)
				.js-form-elements__item
					h3.js-form-elements__item-title #{headers[2]}
					+toggle(toggle)
					+toggle(toggle)
				.js-form-elements__item
					h3.js-form-elements__item-title #{headers[3]}
					+like('', '2')
					+like('', '12')
				.js-form-elements__item
					h3.js-form-elements__item-title #{headers[4]}
