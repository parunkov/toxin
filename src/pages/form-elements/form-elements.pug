	+ui-kit
	.form-elements
		.form-elements__container
			section.js-form-elements__section
				.js-form-elements__item
					+input(input1)
				.js-form-elements__item
					+input(input2)
				.js-form-elements__item
					+input(input3)
				.js-form-elements__item
					+input(input4)
				.js-form-elements__item
					.js-form-elements__item-inner.js-form-elements__item-inner_left
						+input(input5)
					.form-elements__space
					.js-form-elements__item-inner.js-form-elements__item-inner_right
