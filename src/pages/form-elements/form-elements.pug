					h3.js-form-elements__item-title #{headers[9]}
					ul.form-elements__bullet-list
						li.form-elements__bullet-item #{bullets[0]}
						li.form-elements__bullet-item #{bullets[1]}
						li.form-elements__bullet-item #{bullets[2]}
			section.js-form-elements__section
				.js-form-elements__item
					+info(info1)
				.js-form-elements__item
					+info(info2)
			section.js-form-elements__section
