mixin input(data)
	-
		const {h3, type, name, cl, val, plac, p, icon, color} = data;
	.input
		if h3
			span.input__name= h3
		if p
			p.input__text= p
		if val	
			if plac	
				input(type= type name= name class="input__field"+cl value= val placeholder= plac)
			else 
				input(type= type name= name class="input__field"+cl value= val)
		else
			input(type= type name= name class="input__field"+cl placeholder= plac)
		if icon
			if color === 'purple'
				button(type="button" class="input__button input__button_color_purple")= icon
			else
				button(type="button" class="input__button")= icon