include ../rate/rate.pug
mixin room-card(data, text)
	-
		const {images, num, lux, price, rate, rev, link} = data;
		const {currency, time, reviews} = text;
	section(class="room-card js-room-card")
		.room-card__slider
			.room-card__slide-wrapper
				- for (let i = 0; i < images.length; i++)
					.room-card__slide.js-room-card__slide
						img(src=images[i])
				.room-card__shadow.room-card__shadow_left
				.room-card__shadow.room-card__shadow_right
				.room-card__arrow.room-card__arrow_left.js-room-card__arrow_left expand_more
				.room-card__arrow.room-card__arrow_right.js-room-card__arrow_right expand_more
				.room-card__controls
					- for (let i = 0; i < images.length; i++)
						.room-card__control.js-room-card__control
		.room-card__text
			a(class="room-card__link" href= link)
				span.room-card__number-wrapper
					span.room-card__number â„–
					h2.room-card__header #{num}
					span.room-card__lux #{lux}
			.room-card__price #{price}#{currency}
				span.room-card__price-text #{time}
			.room-card__rate
				.room-card__rate-inner
					+rate(rate)
				.room-card__reviews #{rev}
					span.room-card__reviews-text #{reviews}
