mixin review(cl, img, like, head, days, text)
	div(class=cl + "-container")
		.review
			.review__grid-column-1
				.review__img-wrapper
					img(src=img class=cl + "-img review__img")
				.review__like-wrapper
					+like(cl, like)
			.review__grid-column-2
				h4.review__header= head
				p.review__days= days
				p.review__text= text