mixin review(data)
	-
		const {className, img, like, head, days, text} = data
	.review
		.review__column-left
			.review__img-wrapper
				img(src=img class=className + "-img review__img")
			.review__like-wrapper
				+like(className, like)
		.review__column-right
			h4.review__header= head
			p.review__days= days
			p.review__text= text