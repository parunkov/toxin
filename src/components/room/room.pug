mixin room
	include ../../components/input/input.pug
	include ../../components/dropdown/dropdown.pug
	include ../../components/datepicker/datepicker.pug
	article.room
		.room__header
			.room__header-1
				h1.room__header-text <span class="room__header_number">№</span>888
					span.room__header_category  люкс
			.room__header-2
				p.room__header_price 9 990₽ <span class="room__header_price-text">в сутки</span>
		form.room__form
			.room__inputs-wrapper
				.room__input-wrapper
					+input(
					'прибытие', 
					'text', 
					'arrival', 
					'room__input-1', 
					'19.08.2019', 
					'ДД.ММ.ГГГГ', 
					'', 
					'expand_more')
				.room__input-wrapper
					+input(
					'выезд', 
					'text', 
					'departure', 
					'room__input-2', 
					'23.08.2019', 
					'ДД.ММ.ГГГГ', 
					'', 
					'expand_more')
			.room__datepicker-wrapper
				.room__datepicker-container
					+datepicker
			+dropdown(
			'peoples',
			'room__dropdown', 
			'гости', 
			'', 
			'взрослые', 
			'дети', 
			'младенцы',
			'1')
			p.room__text 
				span.room__text_left 9 990₽ х 4 суток 
				span.room__text_right 39 960₽
			p.room__text
				span.room__text_left Сбор за услуги: скидка 2 179₽ 
				span.room__i i
				span.room__text_right 0₽
			p.room__text
				span.room__text_left Сбор за дополнительные услуги
				span.room__i i
				span.room__text_right 300₽
			.room__price
				span.room__price-1 Итого
				span.room__price-2
				h2.room__price-3 38 081₽
			.room__btn
				button.btn.btn_arrow.btn_submit забронировать
