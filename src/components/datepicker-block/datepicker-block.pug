mixin datepicker(text1, text2)
	.datepicker-block.js-datepicker-block
		.datepicker-block__content.js-datepicker-block__content
		.datepicker-block__buttons-block
			.datepicker-block__set-button.js-datepicker-block__set-button
				button(type="button" class="button button_theme_text") #{text1}
			.datepicker-block__clear-button.js-datepicker-block__clear-button
				button(type="button" class="button button_theme_text button_color_gray") #{text2}
