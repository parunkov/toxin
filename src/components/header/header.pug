mixin header(cl, menu, activePageNumber, btn1, href1, btn2, href2, login)
	.page__container.header
		.header__active-page-number= activePageNumber
		a(href="index.html")
			span.page__logo.header__logo
		a.header__burger
			.header__burger-line
		nav.header__ul-wrap
			ul.header__ul
				each val, i in menu
					if menu[i].incl
						li.header__li.header__li_big
							a(href=menu[i].href class="header__a") !{menu[i].item}
							span.header__arrow expand_more
							ul.header__ul.header__ul_menu.header__ul-incl
								.header__ul-incl-inner
									each val, j in menu[i].incl
										li.header__li.header__li_incl
											a(href=menu[i].hrefs[j] class="header__a") !{menu[i].incl[j]}
					else
						li.header__li
							a(href=menu[i].href class="header__a") !{menu[i].item}
							ul.header__ul.header__ul_menu
		if login
			.header__login-container-logged
				.header__user Cosmin Negoita
		else
			.header__login-container
				.header__login-wrap
					a(href=href1 class="btn btn_white btn_header-white header__btn") 
						span.header__login-inner !{btn1}
				.header__login-wrap
					a(href=href2 class="btn btn_small header__btn") !{btn2}

