mixin header(cl, menu, activePageNumber, btn1, href1, btn2, href2, login)
	.header
		nav.header__navigation
			.header__active-page-number= activePageNumber
			a(href="index.html")
				.header__logo
					span.page__logo
			a.header__burger
				.header__burger-line
			.header__navigation-list-wrapper
				ul.header__navigation-list
					each val, i in menu
						if menu[i].incl
							li.header__navigation-item.header__navigation-item_with-submenu
								a(href=menu[i].href class="header__link header__link_with-submenu") !{menu[i].item}
								ul.header__navigation-list.header__navigation-list-submenu
									each val, j in menu[i].incl
										li.header__navigation-item.header__navigation-item_submenu
											a(href=menu[i].hrefs[j] class="header__link") !{menu[i].incl[j]}
						else
							li.header__navigation-item
								a(href=menu[i].href class="header__link") !{menu[i].item}
								ul.header__navigation-list
			if login
				.header__user-block-logged
					.header__user Cosmin Negoita
			else
				.header__user-block
					.header__btn-wrapper
						.header__btn
							a(href=href1 class="btn btn_white btn_header-white") 
								span.header__btn-inner !{btn1}
					.header__btn-wrapper
						.header__btn
							a(href=href2 class="btn btn_small") !{btn2}

