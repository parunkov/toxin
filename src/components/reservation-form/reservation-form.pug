mixin reservation-form
	include ../../components/dates-block/dates-block.pug
	article.reservation-form
		.reservation-form__title
			.reservation-form__title-left
				h1.reservation-form__title-text <span class="reservation-form__title_number">№</span>888
					span.reservation-form__title_category  люкс
			.reservation-form__title-right
				p.reservation-form__title_price 9 990₽ <span class="reservation-form__title_price-text">в сутки</span>
		form.reservation-form__form
			+dates-block
			+dropdown(
				'peoples',
				'', 
				'гости', 
				'', 
				'взрослые', 
				'дети', 
				'младенцы',
				'1')
			p.reservation-form__text 
				span.reservation-form__text_left 9 990₽ х 4 суток 
				span.reservation-form__text_right 39 960₽
			p.reservation-form__text
				span.reservation-form__text_left Сбор за услуги: скидка 2 179₽ 
				span.reservation-form__i i
				span.reservation-form__text_right 0₽
			p.reservation-form__text
				span.reservation-form__text_left Сбор за дополнительные услуги
				span.reservation-form__i i
				span.reservation-form__text_right 300₽
			.reservation-form__price
				span.reservation-form__price-text Итого
				span.reservation-form__price-space
				h2.reservation-form__price-value 38 081₽
			.reservation-form__btn
				button(type="submit" class="btn btn_witch-arrow btn_submit") забронировать
