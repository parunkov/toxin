mixin header(cl, menu, active, btn1, btn2, login)
	.header__container
		.header__active= active
		.page__logo.header__logo
		.header__ul-wrap
			ul.header__ul
				each val, i in menu
					if menu[i].incl
						li.header__li.header__li--big
							a(href=menu[i].href class="header__a") !{menu[i].item}
							ul.header__ul.header__ul--menu.header__ul-incl
								each val, j in menu[i].incl
									li.header__li.header__li--incl
										a(href=menu[i].hrefs[j] class="header__a") !{menu[i].incl[j]}
							span.header__arrow expand_more
					else
						li.header__li
							a(href=menu[i].href class="header__a") !{menu[i].item}
							ul.header__ul.header__ul--menu
		if login
			.header__login-container-logged
				.header__user Cosmin Negoita
		else
			.header__login-container
				.header__login-content
					.header__login-wrap
						a(href="#" class="btn btn--white btn--small-white") !{btn1}
					.header__login-space
					.header__register-wrap
						a(href="#" class="btn btn--small") !{btn2}