extends ../../base.pug
block title
	| Room details
block main
	.room_details__header
		include ../../components/page_header/page_header.pug
	.room_details__img-wrap
		.room_details__img-col-1
			img(src="img/room1.jpg" width="100%")
		.room_details__img-col-2
			.room_details__img-2
				img(src="img/room2.jpg" width="100%")
			.room_details__img-3
				img(src="img/room3.jpg" width="100%")
	.room_details__container
		include ../../components/info/info.pug
		.room_details__col-1
			.room_details__content-row-1
				.room_details__text-1
					h2.page__h2.room_details__h2-1 Сведения о номере
					.room_details__info-wrap
						+info(
							'room_details__info-1',
							'insert_emoticon',
							'Комфорт',
							'Шумопоглощающие стены')
					.room_details__info-wrap
						+info(
							'room_details__info-2',
							'location_city',
							'Удобство',
							'Окно в каждой из спален')
					.room_details__info-wrap
						+info(
							'room_details__info-3',
							'whatshot',
							'Уют',
							'Номер оснащён камином')
				.room_details__text-space-1
				.room_details__text-2
					h2.page__h2.room_details__h2-2 Впечатления от номера
					.room_details__chart-wrap
						.room_details__chart
						.room_details__chart-2
						.room_details__chart-inner
			.room_details__content-row-2
				.room_details__text-3
			.room_details__content-row-3
				.room_details__text-4
				.room_details__text-space-2
				.room_details__text-5
		.room_details__space
		.room_details__col-2