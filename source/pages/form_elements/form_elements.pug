							'Text Field', 
							'email', 
							'form_elements__input-2', 
							'input__input--hover form_elements__input', 
							'This is pretty awesome', 
							'', 
							'Hover / Focus')
					.form_elements__item.form_elements__item--3
						+input(
							'Dropdown', 
							'email', 
							'form_elements__input-3', 
							'form_elements__input', 
							'Сколько гостей', 
							'', 
							'Default', 
							'expand_more')
					.form_elements__item.form_elements__item--4
						+input(
							'masked text field', 
							'date', 
							'form_elements__input-4', 
							'form_elements__input', 
							'', 
							'Email', 
							'Default', 
							'expand_more')
					.form_elements__item.form_elements__item--5
						.form_elements__item-inner.form_elements__item-inner--1
							+input(
								'date Dropdown', 
								'date', 
								'form_elements__input-5', 
								'form_elements__input', 
								'', 
								'', 
								'', 
								'expand_more')
