						.form_elements__item-inner.form_elements__item-inner--2
							+input(
								'date Dropdown', 
								'date', 
								'form_elements__input-6', 
								'form_elements__input', 
								'2019-08-19', 
								'', 
								'', 
								'expand_more')
					.form_elements__item.form_elements__item--6
						+input(
							'filter date dropdown', 
							'email', 
							'form_elements__input-7', 
							'form_elements__input', 
							'19 авг - 23 авг', 
							'', 
							'', 
							'expand_more')
					.form_elements__item.form_elements__item--7
						+input(
							'subscription text field', 
							'email', 
							'form_elements__input-8', 
							'form_elements__input', 
							'', 
							'Email', 
							'', 
							'arrow_forward', 
							'purple')
			.form_elements__col.form_elements__col--2
				section.form_elements__inner.form_elements__inner--2
					.form_elements__item.form_elements__item--8
						h3.form_elements__item-8-header Checkbox Buttons
						+checkbox(
							'form_elements__checkbox-1', 
							['Можно курить', 
							'Можно с питомцами', 
							'Можно пригласить гостей (до 10 человек)'])
					.form_elements__item.form_elements__item--9
						h3.form_elements__item-9-header Radio Buttons
						+radio(
							'form_elements__radio', 
							['Мужчина', 'Женщина'])
					.form_elements__item.form_elements__item--10
						h3.form_elements__item-10-header Toggle
						+toggle(
							'form_elements__toggle', 
							['Получать спецпредложения', 
							'Получать спецпредложения'])
					.form_elements__item.form_elements__item--11
						h3.form_elements__item-11-header like button
						+like('form_elements__1', '2')
						+like('form_elements__2', '12')
					.form_elements__item.form_elements__item--12
						h3.form_elements__item-11-header rate button
						+rate('form_elements__rate-1', 4, 1)
						+rate('form_elements__rate-2', 5, 1)
			.form_elements__col.form_elements__col--3
				section.form_elements__inner.form_elements__inner--3
					.form_elements__item.form_elements__item--13
						+slider(1, 'Range Slider')
					.form_elements__item.form_elements__item--14
						h3.form_elements__item-14-header buttons
						.form_elements__btn.form_elements__btn--1.btn click me
						.form_elements__btn.form_elements__btn--2.btn.btn--hover click me
						.form_elements__btn.form_elements__btn--3.btn.btn--white click me
						.form_elements__btn.form_elements__btn--4.btn.btn--white.btn--hover click me
						.form_elements__btn.form_elements__btn--5.btn.btn--icon-link click me
						.form_elements__btn.form_elements__btn--6.btn.btn--icon-link.btn--icon-link-hover click me
						.form_elements__btn.form_elements__btn--7.btn.btn--arrow перейти к оплате
					.form_elements__item.form_elements__item--15
						h3.form_elements__item-15-header pagination
