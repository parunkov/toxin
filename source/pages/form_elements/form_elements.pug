extends ../../base.pug
block title
	| Form Elements	
block main
	include ../../components/ui_kit/ui_kit.pug
	include ../../components/input/input.pug
	include ../../components/checkbox/checkbox.pug
	include ../../components/radio/radio.pug
	include ../../components/toggle/toggle.pug
	include ../../components/like/like.pug
	include ../../components/rate/rate.pug
	include ../../components/slider/slider.pug
	include ../../components/dropdown/dropdown.pug
	include ../../components/info/info.pug
	include ../../components/review/review.pug
	.page__container
		article.form_elements__row
			.form_elements__col.form_elements__col--1
				section.form_elements__inner.form_elements__inner--1
					.form_elements__item.form_elements__item--1
						+input(
							'Text Field', 
							'email', 
							'form_elements__input-1', 
							'form_elements__input', 
							'', 
							'Email', 
							'Default')
					.form_elements__item.form_elements__item--2
