extends ../../base.pug
block title
	| Headers & Footers
block main
	.headers_footers__page
		include ../../components/ui_kit/ui_kit.pug
		include ../../components/header/header.pug
		include ../../components/footer/footer.pug
		-
			let MenuItem = function(item, href, incl, hrefs) {
				this.item = item;
				this.href = href;
				this.incl = incl;
				this.hrefs = hrefs;
			}
			let menu = [
				new MenuItem('Home', '#'),
				new MenuItem('About Us', '#'),
				new MenuItem('Services', '#', ['Service 1', 'Service 2', 'Service 3'], ['#', "#", '#']),
				new MenuItem('Careers', '#'),
				new MenuItem('News', '#'),
				new MenuItem('Documentation', '#')
			];
			let nav = [
				new MenuItem('Navigation', '#', ['About Us', 'News', 'Support', 'Products'], ['#', '#', '#', '#']),
				new MenuItem('About Us', '#', ['Who we are', 'Our team', 'Careers', 'Investors'], ['#', '#', '#', '#']),
				new MenuItem('Support', '#', ['Documentation', 'Community', 'Get in Touch'], ['#', '#', '#'])
			];
		.headers_footers__menu.headers_footers__menu--1
			+header(headers_footers__header-menu, menu, 0, 'Login', 'Register')
		.headers_footers__menu.headers_footers__menu--2
			+header(headers_footers__header-menu, menu, 0, 'Login', 'Register', 1)
		.headers_footers__footer-1
			+footer(
				headers_footers__footer, 
				'Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.',
				nav, 
				'Subscribe to our newsletter',
				'Receive our latest news and promotions in your inbox!',
				'Copyright Â© 2018 Toxin UI Kit. All rights reserved.', 
				1)
		.headers_footers__footer-2
			.headers_footers__footer-wrap
				.headers_footers__footer-container
					.page__logo.headers_footers__logo
					p.headers_footers__p Lorem ipsum dolor sit amet consectetur adipiscing elit aliquam eget nullam pellentesque aliquam curabitur cociis.
					ul
						li.footer__social-li
							a(href="#" class="footer__social footer__social--twitter") Twitter
						li.footer__social-li
							a(href="#" class="footer__social footer__social--facebook") Facebook
						li.footer__social-li
							a(href="#" class="footer__social footer__social--instagram") Instagram