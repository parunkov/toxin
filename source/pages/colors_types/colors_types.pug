extends ../base
block title
	| Colors & Type
block main
	include ../../components/ui_kit/ui_kit.pug
	.page__container
		.colors-types__row
			.colors-types__col.colors-types__col--1
				.colors-types__colors
					mixin color(i, color, text)
						.colors-types__color-block-wrap
							div(class="colors-types__color-block colors-types__color-block--"+i)
							.colors-types__color-block-text
								h2.colors-types__color-block-h2= color
								p.colors-types__color-block-p= text
					+color(1, "Dark Shade 100%","#1F2041")
					+color(2, "Dark Shade 75%","#1F2041")
					+color(3, "Dark Shade 50%","#1F2041")
					+color(4, "Dark Shade 25%","#1F2041")
					+color(5, "Dark Shade 5%","#1F2041")
					+color(6, "Purple","#BC9CFF")
					+color(7, "Green","#6FCF97")
			.colors-types__col.colors-types__col--2
				.colors-types__types
					.colors-types__types-block-wrap
						.colors-types__types-col-1.colors-types__types-col-1--1
							.colors-types__types-text-1.colors-types__types-text-1--1 H1
						.colors-types__types-col-2.colors-types__types-col-2--1
							h1 This one is the sub-section or widget title
					.colors-types__types-block-wrap
						.colors-types__types-col-1.colors-types__types-col-1--2
							.colors-types__types-text-1.colors-types__types-text-1--2 H2
						.colors-types__types-col-2.colors-types__types-col-2--2
							h2 Next one is the item title inside widgets
					.colors-types__types-block-wrap
						.colors-types__types-col-1.colors-types__types-col-1--3
							.colors-types__types-text-1.colors-types__types-text-1--3 H3
						.colors-types__types-col-2.colors-types__types-col-2--3
							h3 This is a label or CTA text
					.colors-types__types-block-wrap
						.colors-types__types-col-1.colors-types__types-col-1--4
							.colors-types__types-text-1.colors-types__types-text-1--4 Body
						.colors-types__types-col-2.colors-types__types-col-2--4
							p This is the body text which is used for most of the design, like paragraphs, lists, etc.