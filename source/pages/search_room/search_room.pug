extends ../../base.pug
block title
	| Search room/Filter
block main
	header.search_room__header
		include ../../components/page-header/page-header.pug
	main.search_room__wrap
		include ../../components/input/input.pug
		include ../../components/dropdown/dropdown.pug
		include ../../components/slider/slider.pug
		include ../../components/checkbox/checkbox.pug
		include ../../components/card/card.pug
